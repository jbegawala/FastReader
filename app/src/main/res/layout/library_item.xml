<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/actionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/itemTitle"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:background="@color/background_dark"
        android:src="@drawable/ic_more_vert" />

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/actionMenu"
        android:minHeight="50dp"
        android:layout_marginStart="@dimen/inner_margin"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/itemSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/inner_margin"
        android:layout_toStartOf="@+id/itemDate"
        android:layout_below="@+id/itemTitle"
        android:maxLines="1"
        android:textColor="@color/ultra_subdued_text_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/itemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemTitle"
        android:layout_marginEnd="@dimen/inner_margin"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:textColor="@color/ultra_subdued_text_dark"
        android:textSize="12sp" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/itemSubTitle"
        android:layout_marginBottom="-6dp"
        android:max="100"
        android:maxHeight="2dip" />

</RelativeLayout>