<resources>

    <!-- Base application theme. -->
    <style name="Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:popupMenuStyle">@style/popupThemeDark</item>
        <item name="android:titleTextColor">?attr/text_color</item>
        <item name="preferenceTheme">@style/settingsThemeDark</item>
        <item name="seekBarPreferenceStyle">@style/Preference.SeekBarPreference</item>

        <item name="chrome_bg">@color/background_dark</item>
        <item name="settings_icon">@drawable/ic_settings_white</item>
        <item name="love_icon">@drawable/ic_love_white</item>
        <item name="theme_icon">@drawable/ic_theme_white</item>
        <item name="speed_icon">@drawable/ic_gauge_white</item>
        <item name="book_icon">@drawable/ic_book_white</item>
        <item name="subdued_text">@color/subdued_text_dark</item>
        <item name="ultra_subdued_text">@color/ultra_subdued_text_dark</item>
        <item name="list_bg">@color/dark_list_bg</item>

        <item name="text_color">@color/text_color_dark</item>

    </style>

    <style name="popupThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:itemBackground">@color/ultra_subdued_text_dark</item>
    </style>

    <style name="dialogThemeDark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">?attr/text_color</item>
        <item name="android:textColorSecondary">?attr/text_color</item>
        <item name="android:background">@color/ultra_subdued_text_dark</item>
    </style>

    <style name="settingsThemeDark">
        <item name="android:textColorPrimary">?attr/text_color</item>
        <item name="android:textColorSecondary">?attr/text_color</item>
    </style>

    <style name="PivotLetter">
        <item name="android:textColor">@color/pivot_text</item>
    </style>

    <style name="SubduedTextStyle">
        <item name="android:textColor">?attr/subdued_text</item>
    </style>

    <style name="UltraSubduedTextStyle">
        <item name="android:textColor">?attr/ultra_subdued_text</item>
    </style>

    <style name="StatusText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/ultra_subdued_text</item>
    </style>

    <attr name="love_icon" format="reference" />
    <attr name="theme_icon" format="reference" />
    <attr name="speed_icon" format="reference" />
    <attr name="book_icon" format="reference" />
    <attr name="settings_icon" format="reference" />

    <attr name="text_color" format="reference" />
    <attr name="subdued_text" format="reference" />
    <attr name="ultra_subdued_text" format="reference" />
    <attr name="list_bg" format="reference" />
    <attr name="chrome_bg" format="reference" />

</resources>
